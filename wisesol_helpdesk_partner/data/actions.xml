<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_trigger_find_partner_wisesolution" model="base.automation">
            <field name="name">Find partner from chatter</field>
            <field name="model_id" ref="helpdesk.model_helpdesk_ticket"/>
            <field name="trigger">on_create</field>
            <field name="active" eval="True"/>
            <field name="state">code</field>
            <field name="code"><![CDATA[
if record['team_id'].name == env['ir.config_parameter'].sudo().get_param('team_name'):
    record.find_partner()
            ]]>
            </field>
        </record>
</odoo>