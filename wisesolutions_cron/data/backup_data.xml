<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 
            Create a scheduled action that runs once a day that
            runs the wise.backup.create_backup() funciton
        -->
        <record id="ir_cron_wise_solutions_backup" model="ir.cron">
            <field name="name">Backup Cron</field>
            <field name="model_id" ref="model_wise_backup"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.check_backup()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
        </record>
    </data>
</odoo>